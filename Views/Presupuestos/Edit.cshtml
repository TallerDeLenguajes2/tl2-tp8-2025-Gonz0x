@model tl2_tp8_2025_Gonz0x.ViewModels.PresupuestoViewModel

<h2>Editar Presupuesto</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="NombreDestinatario"></label>
        <input asp-for="NombreDestinatario" class="form-control" />
        <span asp-validation-for="NombreDestinatario" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaCreacion"></label>
        <input asp-for="FechaCreacion" class="form-control" type="date" />
        <span asp-validation-for="FechaCreacion" class="text-danger"></span>
    </div>

    <button class="btn btn-primary">Guardar Cambios</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}