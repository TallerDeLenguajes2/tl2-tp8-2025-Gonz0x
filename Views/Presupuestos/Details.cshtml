@model tl2_tp8_2025_Gonz0x.Models.Presupuestos

@{
    ViewData["Title"] = "Detalle del Presupuesto";
}

<h2>Detalle del Presupuesto</h2>

<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">Presupuesto ID: @Model.IdPresupuesto</h5>
        <p class="card-text"><strong>Destinatario:</strong> @Model.NombreDestinatario</p>
        <p class="card-text"><strong>Fecha de creaci√≥n:</strong> @Model.FechaCreacion.ToString("dd/MM/yyyy")</p>
        <p class="card-text"><strong>Total:</strong> @Model.MontoPresupuestoConIva().ToString("C")</p>
        <p class="card-text"><strong>Cantidad total de productos:</strong> @Model.CantidadProductos()</p>
    </div>
</div>

<h4>Productos asociados</h4>
<p>
    <a asp-action="AgregarProducto" 
       asp-route-id="@Model.IdPresupuesto" 
       class="btn btn-success">
        Agregar Producto
    </a>
</p>


<table class="table table-striped table-bordered mt-3">
    <thead class="table-dark">
        <tr>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Precio Unitario</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detalle in Model.Detalle)
        {
            <tr>
                <td>@detalle.Producto.Descripcion</td>
                <td>@detalle.Cantidad</td>
                <td>@detalle.Producto.Precio.ToString("C")</td>
                <td>@(detalle.Cantidad * detalle.Producto.Precio).ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Index" class="btn btn-secondary">Volver a Lista</a>
</p>