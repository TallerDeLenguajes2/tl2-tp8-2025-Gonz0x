@model List<tl2_tp8_2025_Gonz0x.Models.Productos>

@{
    ViewData["Title"] = "Lista de Productos";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-controller="Productos" asp-action="Create" class="btn btn-primary">Crear Producto</a>
</p>

<table class="table table-striped table-bordered mt-3">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.IdProducto</td>
                <td>@producto.Descripcion</td>
                <td>@producto.Precio.ToString("C")</td>
                <td>
                    <a asp-controller="Productos" asp-action="Details" asp-route-id="@producto.IdProducto" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-controller="Productos" asp-action="Edit" asp-route-id="@producto.IdProducto" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-controller="Productos" asp-action="Delete" asp-route-id="@producto.IdProducto" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
